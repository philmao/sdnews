  	{{#if notes}}
      	{{#each notes}}
	      	<div class="card">
	      	  <div class="card-body">
	      	    <p class="card-text">{{this.body}}</p>
	      	    <form action="/remove-note/{{this._id}}" method="POST">
		      	    <button type="button" class="btn btn-danger">X</button>
	      	    </form>
	      	  </div>
	      	</div>
      	{{/each}}
    {{else}}
  		<div class="card border-secondary mb-3" >
			<div class="card-body no-saved-notes">
				<h6 class="card-title">No notes for this article yet</h6>
			</div>
		</div>
    {{/if}}
    <form action="/save-note/{{this._id}}" method="POST">
      <div class="form-group">
        <label for="message-text" class="form-control-label">New Note:</label>
        <textarea class="form-control" id="message-text"></textarea>
        <button type="button" class="btn btn-success save-note-btn">Save Note</button>
      </div>
    </form>