<div id="wrapper">
  <div id="articles">
  	{{#if topics}}
	  	{{#each topics}}
	  		<div class="card border-secondary mb-3" >
				<div class="card-body">
					<h4 class="card-header">{{this.title}}</h4>
					<p class="card-text">{{this.link}}</p>
					<button type="button" class="btn btn-info article-btn" data-toggle="modal" data-target="#exampleModal">Article Notes</button>

					<!-- Modal -->
					<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
					  <div class="modal-dialog" role="document">
					    <div class="modal-content">
					      <div class="modal-header">
					        <h5 class="modal-title" id="exampleModalLabel">Notes from Article: {{this._id}}</h5>
					        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
					          <span aria-hidden="true">&times;</span>
					        </button>
					      </div>
					      <div class="modal-body">        
					      	{{#each notes}}
					      	{{/each}}
						    <form action="/save-note/{{this._id}}" method="POST">
					          <div class="form-group">
					            <label for="message-text" class="form-control-label">Message:</label>
					            <textarea class="form-control" id="message-text"></textarea>
					          </div>
					        </form>
					      </div>
					      <div class="modal-footer">
					        <button type="button" class="btn btn-success">Save Note</button>
					      </div>
					    </div>
					  </div>
					</div>
					<form action="/saved/{{this._id}}" method="POST">
						<button class="btn btn-danger article-btn">DELETE FROM SAVED</button>
					</form>
				</div>
			</div>
	  	{{/each}}
	  {{else}}
  		<div class="card border-secondary mb-3" >
			<div class="card-body no-saved-articles">
				<h4 class="card-title">Uh Oh. Looks like we don't have any saved articles</h4>
			</div>
		</div>
	  {{/if}}
  </div>
</div>
